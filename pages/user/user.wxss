/* pages/user/user.wxss */
.wrapper{
  margin: 0 40rpx;
}
.section {
  width: 100%;
  height: 90rpx;
  overflow: hidden;
  justify-content: space-between;
  align-items: center;
  vertical-align: middle;
  display: flex;
  border-bottom: 1rpx solid #ddd;
}

.section text{
  color: #aaa;
  font-size: 32rpx;
  flex: 3;
}

.section input{
  color: #888;
  font-size: 32rpx;
  width: 100%;
  margin: 0;
  padding: 0;
  flex: 7;
}

.portrait {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 12rpx solid #fff;
}

.portrait_column {
  width: 100%;
  height: 400rpx;
  justify-content: center;
  align-items: center;
  display: flex;
}

.avatarBtn {
  margin-top: 40rpx;
  background-color: #FF6061;
  color: #fff;
}

.prompt{
  font-size: 24rpx;
  color: #999;
}
